{
  "name": "gym-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint . --config .oxlintrc.json",
    "lint:fix": "oxlint . --config .oxlintrc.json --fix",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.3",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "turbo": "^2.8.3",
    "typescript": "5.9.2",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5"
}

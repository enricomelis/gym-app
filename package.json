{
  "name": "gym-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint . --config .oxlintrc.json",
    "lint:fix": "oxlint . --config .oxlintrc.json --fix",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "check-types": "turbo run check-types",
    "seed": "prisma db seed",
    "db:generate": "prisma generate"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@vitejs/plugin-react": "^5.1.3",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "prisma": "^7.3.0",
    "turbo": "^2.8.3",
    "typescript": "5.9.2",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "dotenv": "^17.2.4"
  }
}